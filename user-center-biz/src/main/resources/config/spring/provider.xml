<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="pop-user-center"  />

    <!--<dubbo:registry address="zookeeper://120.24.39.44:2181" />
-->

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zk.registry}"/>
    <!-- 用dubbo协议暴露服务的端口 -->
    <dubbo:protocol name="dubbo" port="${dubbo.service.port}"  />

    <dubbo:service interface="com.pop.uc.service.UserService" ref="userService" />
    <bean id="userService" class="com.pop.uc.serviceImpl.UserServiceImpl" />


</beans>